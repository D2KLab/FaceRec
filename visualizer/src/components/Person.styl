green_color = #00D1B2
red_color = #F14667

.ball
  display inline-block
  border-radius 50%
  height 10px
  width 10px
  &.good
    background green_color
  &.bad
    background red_color


ul.pics
  display flex
  flex-wrap wrap
  justify-content space-around
  align-items center
  align-content flex-start
  list-style-type none
  padding-left 0

  li
    height 100px
    padding 5px
    position relative
    &:after
      content ''
      position absolute
      bottom 12px
      right: 12px
      border-radius 50%
      height 10px
      width 10px
      background green_color

    &:hover
      img
        border-color green_color
    &.disabled
      order:2
      &:after
        background red_color
      img
        &:hover
          border-color red_color
          filter none !important
    img
      border: 4px solid white
      border-radius: 10px
      max-height 100%

  &.isBlurred
    li.disabled img
      filter blur(2px)
